# =============================================================================
# PORTFOLIO BACKEND ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and update the values for your environment
# DO NOT commit the actual .env file to version control

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Database connection URL
# Development: Use SQLite for local development
# Production: Use PostgreSQL URL from your hosting provider
DATABASE_URL=sqlite:///portfolio.db
# Example PostgreSQL URL:
# DATABASE_URL=postgresql://username:password@hostname:port/database_name

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# SendGrid API key for sending contact form emails
# Get your API key from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=your_sendgrid_api_key_here

# Email address to receive contact form submissions
ADMIN_EMAIL=mufaddaldiwan21@gmail.com

# =============================================================================
# ADMIN PANEL AUTHENTICATION
# =============================================================================
# Username and password for Flask-Admin access
# IMPORTANT: Use strong credentials in production
ADMIN_USER=admin
ADMIN_PASS=your_secure_password_here

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Frontend URL allowed to make API requests
# Development: http://localhost:4200
# Production: https://yourdomain.com
ALLOWED_ORIGIN=http://localhost:4200

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
# Port for the Flask development server
PORT=5001

# Number of Gunicorn workers for production (optional)
WEB_CONCURRENCY=2

# =ecret key===================================================================
# FLASK CONFIGURATION
# =============================================================================
# Secret key for Flask sessions and security
# IMPORTANT: Generate a secure random key for production
# You can generate one with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your_secret_key_here

# Flask environment (development/production)
FLASK_ENV=development

# =============================================================================
# ALTERNATIVE EMAIL CONFIGURATION (SMTP)
# =============================================================================
# If not using SendGrid, configure SMTP settings
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# SMTP_USE_TLS=true